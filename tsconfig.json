{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6"],
    "types": ["node"],
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "public",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}